.Marketplace
    &__Container
        margin-top: 30px
    a   
        text-decoration: none
    p   
        text-align: center
        margin-top: 5px

    .flex 
        margin: 0 20px

    &__ProviderCard
        width: 150px
        height: 130px
        padding: 20px        
        &:hover
            background-color #eff6ff
            box-shadow 0px 1px 3px -1px rgba(133,133,133,1)

        &-Image
            height: 50%

        &-Title
            padding: 18px 0
            text-align: center
            h3
                color: black
                font-weight: 400
                letter-spacing: 0.8px

    .v-image
        margin: 0 auto
        width: 100%
        height: 100%

    .v-image__image--cover
        background-size: contain
