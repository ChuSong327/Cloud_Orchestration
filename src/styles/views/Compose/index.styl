.Compose
    &__Card
        margin: 20px
        padding-bottom: 10px

    &__Cron
        width: 500px

    &__CronTab
        position: absolute
        z-index: 1000
        height: 100vh
        width: 100vw
        background-color: rgba(0,0,0,0.5)

        .v-card 
            max-width: 800px
            margin: 8% auto 0
            padding: 10px
            animation-name: moveInRight 
            animation-duration: 1s
            animation-direction: alternate

        .v-tabs
            padding: 10px

        span    
            margin-bottom: 7px

        // input[type=number]
        .Input.v-text-field>.v-input__control>.v-input__slot:before 
            border: none
        .Input.v-text-field>.v-input__control>.v-input__slot:after 
            border: none
        .Input__Icon
            margin: 0 5px 8px 5px
            font-size: 20px 
            border: 1px solid lightgrey 

        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button 
            -webkit-appearance: none
            margin: 0
        input[type=number]
            text-align: center


    canvas:focus
        outline: 0
    
    &__Palette-Title
        color: black
        font-weight: 400

    &__Form 
        max-width: 600px
        position: absolute
        bottom: 50px
        right: 5px
        z-index: 1000
        animation-name: moveInRight 
        animation-duration: 1s
        animation-direction: alternate

        

@keyframes moveInRight 
    0% 
        transform: translate(40rem)
    100%
        transition: translate(0)

